{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire pour {{ etablissement.appellationOfficielle }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Ajouter un commentaire pour {{ etablissement.appellationOfficielle }}</h1>

        <div class="comment-form-container">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form) }}
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Ajouter le commentaire</button>
                </div>
            {{ form_end(form) }}
        </div>

        <a href="{{ path('commentaires_etablissement', {'id': etablissement.id}) }}" class="btn btn-secondary mt-3">Retour aux commentaires</a>
    </div>
{% endblock %}
